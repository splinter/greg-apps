                        d.height = this.height * imageScale;
                        simg.setAttribute("width", d.width);
                        simg.setAttribute("height", d.height);
                    }
                    return img.src = url;
                }) ;

            /*   .on("click", function (d) { click })
               .on("touchend", function (d) { click(d) })
